@model Koshop.DomainClasses.MultiPictureModule

@{
    string size = string.Empty;
    switch (Model.MultiPictureItems.Count)
    {
        case 1:
            size = "col-md-12";
            break;
        case 2:
            size = "col-md-6";
            break;
        case 3:
            size = "col-md-4";
            break;
        case 4:
            size = "col-md-3";
            break;
        case 6:
            size = "col-md-2";
            break;
    }
}
<div class="an-page-content">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                @foreach (var item in Model.MultiPictureItems)
                {
                    <a href="@item.Link">
                        <div style="margin:25px 0 0" class=" @size">
                            <div class="an-category-single">
                                <div class="listing-img-container"
                                     style="background: url('/Content/Modules/Images/thumbnail/@item.Image') center center no-repeat;
                                                 background-size: cover;">
                                </div>
                            </div> <!-- end an-category-single -->
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
</div>

